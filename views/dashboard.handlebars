<section>
  <form class="new-post-form">
    <div id="modalRegisterForm" class="hide" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header text-center">
            <h4 class="modal-title w-100 font-weight-bold">Create New Post</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="close-dashboard">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body mx-3">
            <div class="md-form mb-5">
              <i class="fas fa-user prefix grey-text"></i>
              <input type="text" id="post-title" name="post-title" class="form-control validate">
              <label data-error="wrong" data-success="right" for="post-title" class="font-weight-bold m-2">Title</label>
            </div>
            <div class="md-form mb-5">
              <i class="fas fa-envelope prefix grey-text"></i>
              <textarea id="post-contents" name="post-contents" class="d-flex p-2 w-100"></textarea>
              <label data-error="wrong" data-success="right" for="orangeForm-email" class="font-weight-bold m-2">Contents</label>
            </div>
          </div>
          <div class="modal-footer d-flex justify-content-center">
            <button class="btn font-weight-bold" type="submit">Create</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</section>

{{#if posts.length}}
<section>
  <div class="dashboard">
    <h2>Your Posts</h2>
    <ol>
      {{#each posts as |post|}}
      <li>
        {{> post-info post}}
        <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
      </li>
      {{/each}}
    </ol>
</section>
{{/if}}
</div>


<script src="/javascript/add-post.js"></script>