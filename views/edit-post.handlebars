<section>
  <form class="edit-post-form">
    <div id="modalRegisterForm" class="hide" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header text-center">
            <h4 class="modal-title w-100 font-weight-bold">Edit Post</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="close-edit-post">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body mx-3">
            <div class="md-form mb-5">
              <i class="fas fa-user prefix grey-text"></i>
              <input type="text" id="post-title" name="post-title" class="form-control validate"
                value="{{post.post_title}}">
              <label data-error="wrong" data-success="right" for="post-title" class="font-weight-bold m-2">Title</label>
            </div>
            <div class="md-form mb-5">
              <i class="fas fa-envelope prefix grey-text"></i>
              <textarea id="post-contents" name="post-contents" class="d-flex p-2 w-100">{{post.contents}}</textarea>
              <label data-error="wrong" data-success="right" for="orangeForm-email"
                class="font-weight-bold m-2">Contents</label>
            </div>
          </div>
          <div class="modal-footer d-flex justify-content-center">
            <button class="btn font-weight-bold" type="submit">Save Post</button>
            <button type="button" id="delete-post-button" class="btn font-weight-bold">Delete post</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</section>


<section>
  <form class="comment-form">
    <div id="modalRegisterForm" class="hide" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header text-center">
            <h4 class="modal-title w-100 font-weight-bold">Add Comment</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="close-comment">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body mx-3">
            <div class="md-form mb-5">
              <i class="fas fa-envelope prefix grey-text"></i>
              <textarea id="post-contents" name="comment-body" class="d-flex p-2 w-100"></textarea>
              <label data-error="wrong" data-success="right" for="orangeForm-email"
                class="font-weight-bold m-2">Comment</label>
            </div>
          </div>
          <div class="modal-footer d-flex justify-content-center">
            <button class="btn font-weight-bold" type="submit">Save</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</section>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>